<div class="text-center">
  <%= render 'layouts/home_header/', {title: "ログイン"} %>

  <div class="text-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="container">
        <div class="row">
          <div class="input-form col-10 offset-1">
            <div class="field form-group">
              <%= f.label :name, "ユーザー名",class: 'text-white' %><br />
              <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'form-control' %>
            </div>

            <div class="field form-group">
              <%= f.label :password, "パスワード",class: 'text-white' %><br />
              <%= f.password_field :password, autocomplete: "current-password", class: 'form-control' %>
              <br />
              <% if devise_mapping.rememberable? %>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, class: 'text-white' %>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>

      <div class="actions">
        <%= f.submit "ログイン", class: 'btn btn-outline-primary' %>
      </div>

      <%= render "devise/shared/links" %>

    <% end %>
  </div>
</div>
